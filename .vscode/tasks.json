{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Virtual Environment",
            "type": "shell",
            "command": "bash",
            "args": ["-c", "if [ ! -d .venv ]; then python3 -m venv .venv && .venv/bin/pip install --upgrade pip; fi && source .venv/bin/activate"],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Python: Run Current File",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": ["${file}"],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "focus": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Python: Install Requirements",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/pip",
            "args": ["install", "-r", "requirements.txt"],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Python: Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": ["-m", "pytest", "-v"],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
